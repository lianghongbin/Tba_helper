{
    "manifest_version": 3,
    "name": "TBA FixKing",
    "version": "1.0",
    "description": "对易仓系统做一些功能增强，提升仓库管理效率",
    "permissions": [
        "scripting",
        "webNavigation",
        "declarativeNetRequest",
        "storage",
        "alarms",
        "cookies",
        "unlimitedStorage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://yzt.wms.yunwms.com/*",
        "https://yzt.wms.yunwms.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "TBA FixKing",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://yzt.wms.yunwms.com/*",
                "https://yzt.wms.yunwms.com/*"
            ],
            "js": ["utils.js", "database.js", "warehouse-storage.js", "warehouse-manager.js", "picking-code-selector.js", "content.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "utils.js",
                "database.js",
                "warehouse-storage.js",
                "warehouse-manager.js",
                "picking-code-selector.js",
                "picking-fetcher.js",
                "message-handler.js",
                "iframe-injector.js",
                "popup-styles.css",
                "popup-utils.js",
                "popup-event-handler.js",
                "popup-main.js",
                "db-viewer.html",
                "db-viewer.js"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}