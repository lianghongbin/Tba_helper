{
  "manifest_version": 3,
  "name": "AB Bridge Helper (Frame-Aware, YZT)",
  "version": "0.5.0",
  "description": "在同一浏览器 Tab 的多 iframe（单页系统）中，精确路由 A↔B 的跨页面流程。",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["http://yzt.wms.yunwms.com/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://yzt.wms.yunwms.com/shipment/orders-one-pack/list*",
        "http://yzt.wms.yunwms.com/shipment/orders-pack/sorting*"
      ],
      "all_frames": true,
      "js": ["src/content/injector.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://yzt.wms.yunwms.com/*"
      ],
      "all_frames": true,
      "js": ["src/content/sku-monitor.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/common/*.js",
        "src/content/sku-trigger.js",
        "src/content/second-sorting.js"
      ],
      "matches": ["http://yzt.wms.yunwms.com/*"]
    }
  ],
  "options_page": "src/options/options.html",
  "action": {
    "default_title": "AB Bridge Helper"
  }
}